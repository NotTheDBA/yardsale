{
  "name": "yardsale",
  "version": "1.0.0",
  "description": "A full-stack Resale app matching buyers and sellers.  Designed using React and MongoDb with MVC (model view controller) pattern for efficient code reuse.",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev":  "cd client && npm run start",
    "start:devbak": "node server.js && concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && yarn install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pmactavish13/yardsale.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pmactavish13/yardsale/issues"
  },
  "homepage": "https://github.com/pmactavish13/yardsale#readme",
  "devDependencies": {
    "concurrently": "^3.5.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "client": "file:client",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "mongoose": "^5.1.6"
  }
}
